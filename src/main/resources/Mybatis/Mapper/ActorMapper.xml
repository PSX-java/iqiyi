<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.psx.mapper.ActorMapper">
    <resultMap type="Actor" id="actorMap">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="birthday" column="birthday" />
        <result property="sex" column="sex" />
        <result property="description" column="description" />
        <result property="pic" column="pic" />

        <collection  property="regions"  ofType="Region">
            <id property="id" column="rid" />
            <result property="name" column="rname" />
        </collection>

    </resultMap>

    <select id="findAll" resultMap="actorMap">
        select
          a.*,
          r.id rid, r.name rname
        from
            actor a
        inner join
            actor_region ar
        on
            a.id=ar.actorid
        inner join
            region r
        on
            r.id=ar.regionid

    </select>

    <insert id="addActor" parameterType="Actor">
        insert into actor (id,name,birthday,sex,description) values (#{id},#{name},#{birthday},#{sex},#{description})
    </insert>
</mapper>