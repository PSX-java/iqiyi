<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.psx.mapper.UserMapper">

    <select id="queryUserList" resultType="User">
        select * from cms
    </select>

    <select id="querytUserById" resultType="User">
        select * from cms where id =#{Usersid}
    </select>

    <insert id="addUser" parameterType="User">
        insert into cms (Usersid,username,pass,sex) values (#{Usersid},#{username},#{pass},#{sex})
    </insert>

    <update id="updateUser" parameterType="User">
        update cms set Usersid=#{Usersid}, username =#{username},pass = #{pass} where Usersid =#{Usersid}
    </update>

    <delete id="deleteUser" parameterType="int">
        delete from cms where Usersid = #{Usersid}
    </delete>
</mapper>